{
    "name": "lency-lang",
    "displayName": "Lency Professional Support",
    "description": "Professional industrial-grade support for Lency language (.lcy)",
    "version": "0.7.0",
    "publisher": "lency",
    "main": "./dist/extension.js",
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -watch -p ."
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "dependencies": {
        "vscode-languageclient": "^8.0.2"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/node": "^16.0.0",
        "typescript": "^4.4.0"
    },
    "contributes": {
        "languages": [
            {
                "id": "lency",
                "aliases": [
                    "Lency",
                    "lency"
                ],
                "extensions": [
                    ".lcy"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lency",
                "scopeName": "source.lcy",
                "path": "./syntaxes/lency.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "lency",
                "path": "./snippets/lency.code-snippets"
            }
        ],
        "problemMatchers": [
            {
                "name": "lency",
                "owner": "lency",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(error|warning):\\s+(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "message": 5
                }
            }
        ]
    }
}